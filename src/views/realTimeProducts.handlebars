<h1>Lista de Productos</h1>

<table id="tableProd">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Código</th>
            <th>Thumbnail</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Estado</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th> <!-- Nueva columna para acciones -->
            <th>Acciones</th> <!-- Nueva columna para acciones -->
            <th>ID</th>

        </tr>
    </thead>
    <tbody id="body">
        {{#each products}}
            <tr class="fila">
                <td class="editable" contenteditable="true">{{this.title}}</td>
                <td class="editable" contenteditable="true">{{this.description}}</td>
                <td class="editable" contenteditable="true">{{this.code}}</td>
                <td class="editable" contenteditable="true">{{this.thumbnail}}</td>
                <td class="editable" contenteditable="true">{{this.stock}}</td>
                <td class="editable" contenteditable="true">{{this.category}}</td>
                <td class="editable" contenteditable="true">{{this.status}}</td>
                <td class="editable" contenteditable="true">{{this.price}}</td>
                <td class="editable" contenteditable="true">{{this.stock}}</td>
                <td><button onclick="eliminarProducto('{{this.id}}')">X</button></td>
                <td><button onclick="guardarCambios(this, '{{this.id}}')">Guardar</button></td>
                <td>{{this.id}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
<form id="addProductForm" action="#" method="post">
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description" required><br>

    <label for="code">Código:</label>
    <input type="text" id="code" name="code" required><br>

    <label for="thumbnail">Thumbnail:</label>
    <input type="text" id="thumbnail" name="thumbnail" required><br>

    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category" required><br>

    <label for="status">Estado:</label>
    <select id="status" name="status" required>
        <option value="true">True</option>
        <option value="false">False</option>
    </select><br>

    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" required><br>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required><br>

    <label for="editId">ID a Editar:</label>
    <select id="editId" name="editId">
        {{#each products}}
            <option value="{{this.id}}">{{this.id}}</option>
        {{/each}}
        <option value="none">Ninguno</option>
    </select><br>

    <button type="button" onclick="enviarProducto()">Añadir Producto</button>
  </form>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>